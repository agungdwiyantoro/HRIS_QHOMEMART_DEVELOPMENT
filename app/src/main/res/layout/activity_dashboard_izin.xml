<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llMain"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/imStatus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_keyboard_arrow_left_black_48dp"
        android:backgroundTint="@color/abu_abu"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Izin"
            android:textColor="@color/main_color_black"
            android:textSize="36dp" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="34dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/mail_box" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:orientation="vertical">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:id="@+id/linear_izin_sakit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:layout_margin="16dp"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        android:elevation="8dp"
                        android:layout_marginRight="4dp"
                        app:cardCornerRadius="8dp">

                        <TextView
                            android:id="@+id/btn_tambah_izin_sakit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/purple"
                            android:padding="15dp"
                            android:text="@string/tambah"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="18dp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        android:elevation="8dp"
                        android:layout_marginLeft="4dp"
                        app:cardCornerRadius="8dp">


                        <TextView
                            android:id="@+id/btn_status_izin_sakit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/greennew"
                            android:padding="15dp"
                            android:text="@string/status"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="18dp" />

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="16dp"
                    >

                    <TextView
                        android:id="@+id/btn_izin_sakit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="15dp"
                        android:text="@string/izin_sakit"
                        android:textAlignment="center"
                        android:textColor="@color/main_color_black"
                        android:textSize="18dp" />

                </androidx.cardview.widget.CardView>

            </androidx.coordinatorlayout.widget.CoordinatorLayout>

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:id="@+id/linear_izin_cuti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:layout_margin="16dp"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        android:elevation="8dp"
                        android:layout_marginRight="4dp"
                        app:cardCornerRadius="8dp">


                        <TextView
                            android:id="@+id/btn_tambah_izin_cuti"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/purple"

                            android:padding="15dp"
                            android:text="@string/tambah"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="18dp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        android:elevation="8dp"
                        android:layout_marginLeft="4dp"
                        app:cardCornerRadius="8dp">


                        <TextView
                            android:id="@+id/btn_status_izin_cuti"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/greennew"

                            android:padding="15dp"
                            android:text="@string/status"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="18dp" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="16dp"
                    >

                    <TextView
                        android:id="@+id/btn_izin_cuti"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="15dp"
                        android:text="@string/cuti"
                        android:textAlignment="center"
                        android:textColor="@color/main_color_black"
                        android:textSize="18dp" />

                </androidx.cardview.widget.CardView>

            </androidx.coordinatorlayout.widget.CoordinatorLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:elevation="8dp"
                app:cardCornerRadius="8dp">

                <TextView
                    android:id="@+id/btn_izin_meninggalkan_tugas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="15dp"
                    android:text="Izin Dinas dan Tinggal Tugas"
                    android:textAlignment="center"
                    android:textColor="@color/main_color_black"
                    android:textSize="18dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:elevation="8dp"
                app:cardCornerRadius="8dp">

                <TextView
                    android:id="@+id/btn_izin_terlambat_dan_off"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="15dp"
                    android:text="@string/Izin_off_dan_terlambat"
                    android:textAlignment="center"
                    android:textColor="@color/main_color_black"
                    android:textSize="18dp" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>