<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/lin_transparant"
        android:background="@color/transparentBlack"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageView
        android:layout_marginTop="@dimen/padd_10"
        android:padding="15dp"
        android:layout_gravity="left"
        android:id="@+id/imStatus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_keyboard_arrow_left_black_48dp"
        android:backgroundTint="@color/abu_abu"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/padd_10"

                        android:text="Surat"
                        android:textColor="@color/main_color_black"
                        android:textSize="36dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Izin Cuti"
                        android:textColor="@color/main_color_black"
                        android:textSize="18dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padd_10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/nama"
                        android:textColor="@color/second_color_black"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tvNamaEmp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Muhamad Dios Pratama"
                        android:textColor="@color/main_color_black"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padd_10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/divisi"
                        android:textColor="@color/second_color_black"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tvDivisiEmp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Mobile Apps Developer"
                        android:textColor="@color/main_color_black"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padd_10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/jabatan"
                        android:textColor="@color/second_color_black"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tvJabatanEmp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Staff"
                        android:textColor="@color/main_color_black"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padd_10"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Hak Cuti"
                            android:textColor="@color/second_color_black"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tvHakCuti"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="0"
                            android:textColor="@color/main_color_black"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padd_10"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Periode"
                            android:textColor="@color/second_color_black"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tvPeriode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="0"
                            android:textColor="@color/main_color_black"
                            android:textSize="20dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padd_10"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Sisa Cuti"
                        android:textColor="@color/second_color_black"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tvSisaCuti"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="0"
                        android:textColor="@color/main_color_black"
                        android:textSize="20dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padd_10"
                    android:layout_marginBottom="4dp"
                    android:gravity="left"
                    android:text="Jenis Cuti"
                    android:textColor="@color/second_color_black"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_round_dropdown"
                    >

                    <Spinner
                        android:id="@+id/spinJenisCuti"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="8dp"
                        android:popupElevation="8dp"
                        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padd_10"
                    android:gravity="left"
                    android:text="Tanggal Cuti"
                    android:textColor="@color/second_color_black"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <android.support.design.widget.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:id="@+id/tilTglCuti"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/abu_abu"
                        android:layout_weight="1"
                        app:errorTextAppearance="@style/error_appearance">

                        <EditText
                            android:id="@+id/etTglCuti"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_input_rounded"
                            android:padding="10dp"
                            android:enabled="false"
                            android:textColor="@color/main_color_black"
                            android:focusable="true"
                            />


                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:id="@+id/ivTgl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_date_blue"
                        android:layout_weight="7"
                        android:layout_gravity="center"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padd_10"
                    android:gravity="left"
                    android:text="Lama Cuti"
                    android:textColor="@color/second_color_black"
                    android:textSize="12dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilLamaCuti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/red_btn_bg_pressed_color"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <EditText
                        android:id="@+id/etLamaCuti"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_input_rounded"
                        android:inputType="number"
                        android:padding="12dp"
                        android:enabled="false"
                        android:textColor="@color/main_color_black" />


                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padd_10"
                    android:layout_marginBottom="4dp"
                    android:gravity="left"
                    android:text="Delegasi Pekerjaan Kepada"
                    android:textColor="@color/second_color_black"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_round_dropdown"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >

                    <Spinner
                        android:id="@+id/spinDelegasi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
                        android:visibility="gone"
                        />

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilDelegasiAutoComp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/red_btn_bg_pressed_color"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        tools:ignore="LabelFor" />

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:id="@+id/llUploadLamp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="left"
                        android:text="Foto Lampiran"
                        android:textColor="@color/second_color_black"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:background="@drawable/bg_tag"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/image_surat_izin_cuti"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_camera" />

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tx_image_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padd_10"
                            android:textAlignment="center"
                            android:textColor="@color/main_color_black"
                            android:textSize="14dp" />


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="left"
                    android:text="Keterangan"
                    android:textColor="@color/second_color_black"
                    android:textSize="12dp" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilKetCuti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/red_btn_bg_pressed_color"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <EditText
                        android:maxLength="200"
                        android:id="@+id/etKetCuti"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_round_dropdown"
                        android:gravity="top|left"
                        android:inputType="textMultiLine"
                        android:lines="6"
                        android:overScrollMode="always"
                        android:scrollbars="vertical"
                        android:scrollHorizontally="false"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/main_color_black" />


                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/btn_ajukan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padd_10"
                    android:layout_weight="1"
                    android:background="@drawable/bg_round"
                    android:backgroundTint="@color/greennew"
                    android:text="@string/ajukan"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp" />

            </LinearLayout>

        </android.support.design.widget.CoordinatorLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/llViewCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#ffffff"
        >

        <com.squareup.timessquare.CalendarPickerView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            />

        <LinearLayout
            android:id="@+id/llViewGetDates"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp"
            >

            <Button
                android:id="@+id/btnCancelDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Batal"
                android:layout_weight="1"
                android:layout_gravity="center"
                />

            <Button
                android:id="@+id/btnGetDates"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Pilih Tanggal"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:backgroundTint="@color/main_blue_color"
                />

        </LinearLayout>

    </LinearLayout>





</android.support.design.widget.CoordinatorLayout>