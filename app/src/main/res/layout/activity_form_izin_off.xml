<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent">

    <!--tvSetLatLong use for set latlong to send to server-->
    <TextView
        android:id="@+id/tvSetLatLong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <ImageView
        android:layout_marginTop="@dimen/padd_10"
        android:padding="15dp"
        android:layout_gravity="left"
        android:id="@+id/imStatus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_keyboard_arrow_left_black_48dp"
        android:backgroundTint="@color/abu_abu"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/padd_10"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/surat"
                        android:textColor="@color/main_color_black"
                        android:textSize="36dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/izin_off"
                        android:textColor="@color/main_color_black"
                        android:textSize="18dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padd_10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/nama"
                        android:textColor="@color/second_color_black"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tvNamaEmp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Username Username"
                        android:textColor="@color/main_color_black"
                        android:textSize="24dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padd_10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/divisi"
                        android:textColor="@color/second_color_black"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tvDivisiEmp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Divisi Divisi"
                        android:textColor="@color/main_color_black"
                        android:textSize="24dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padd_10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/jabatan"
                        android:textColor="@color/second_color_black"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tvJabatanEmp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Staff"
                        android:textColor="@color/main_color_black"
                        android:textSize="24dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padd_10"
                    android:gravity="left"
                    android:text="@string/tanggal_off"
                    android:textColor="@color/second_color_black"
                    android:textSize="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_tanggal_off"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColorHint="@color/red_btn_bg_pressed_color">
                    <!--style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->>

                    <EditText
                        android:id="@+id/et_tanggal_off"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_input_rounded"
                        android:enabled="false"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textColor="@color/main_color_black"
                        android:textAllCaps="true"
                        />


                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/iv_tanggal_off"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_date_blue"
                    android:layout_weight="7"
                    android:layout_gravity="center"
                    />
            </LinearLayout>


                <TextView
                    android:id="@+id/tv_tanggal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padd_10"
                    android:gravity="left"
                    android:text="@string/lama_off"
                    android:textColor="@color/second_color_black"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:id="@+id/tx_input_tanggal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/abu_abu"
                        android:layout_weight="1"
                        app:errorTextAppearance="@style/error_appearance">

                        <EditText
                            android:id="@+id/et_lama_off"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_input_rounded"
                            android:padding="10dp"
                            android:enabled="false"
                            android:textColor="@color/main_color_black"
                            android:textAllCaps="true"
                            android:focusable="true"
                            />


                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <CheckBox
                    android:id="@+id/cb_lampirkan_foto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lampiran"
                    android:textColor="@color/black"
                    android:buttonTint="@color/main_blue_color"
                    />


                <LinearLayout
                    android:id="@+id/llUploadLamp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="left"
                        android:text="@string/lampiran_foto_off"
                        android:textColor="@color/second_color_black"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:background="@drawable/bg_tag"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:id="@+id/til_iv_lampiran_off"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColorHint="@color/abu_abu"
                            android:layout_weight="1"
                            app:errorTextAppearance="@style/error_appearance">

                        <ImageView
                            android:id="@+id/iv_lampiran_off"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_camera" />

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tx_image_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padd_10"
                            android:textAlignment="center"
                            android:textColor="@color/main_color_black"
                            android:textSize="14dp" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                  </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padd_10"
                    android:gravity="left"
                    android:text="@string/alasan"
                    android:textColor="@color/second_color_black"
                    android:textSize="12dp" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_alasan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColorHint="@color/red_btn_bg_pressed_color"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <EditText
                        android:maxLength="200"
                        android:id="@+id/et_alasan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_round_dropdown"
                        android:gravity="top|start"
                        android:inputType="textMultiLine"
                        android:lines="6"
                        android:overScrollMode="always"
                        android:scrollbars="vertical"
                        android:scrollHorizontally="false"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/main_color_black"
                        android:textAllCaps="true"/>

                </com.google.android.material.textfield.TextInputLayout>


                <Button
                    android:id="@+id/btn_ajukan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padd_10"
                    android:layout_weight="1"
                    android:backgroundTint="@color/greennew"
                    android:text="@string/ajukan"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    android:layout_gravity="bottom" />

                </LinearLayout>



        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    </ScrollView>


    <LinearLayout
        android:id="@+id/llViewCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#ffffff"
        >

        <com.squareup.timessquare.CalendarPickerView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            />

        <LinearLayout
            android:id="@+id/llViewGetDates"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp"
            >

            <Button
                android:id="@+id/btnCancelDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Batal"
                android:layout_weight="1"
                android:layout_gravity="center"
                />

            <Button
                android:id="@+id/btnGetDates"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Pilih Tanggal"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:backgroundTint="@color/main_blue_color"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_transparant"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparentBlack"
        android:visibility="gone"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:backgroundTint="@color/white"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >

                <ProgressBar
                    android:id="@+id/pbUpload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/tvOnProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15%"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uploading data..."
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>