<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/lin_transparant"
        android:background="@color/transparentBlack"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageView
        android:layout_marginTop="@dimen/padd_10"
        android:padding="15dp"
        android:layout_gravity="left"
        android:id="@+id/imStatus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_keyboard_arrow_left_black_48dp"
        android:backgroundTint="@color/abu_abu"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/padd_10"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Surat"
                        android:textColor="@color/main_color_black"
                        android:textSize="36dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Izin Sakit"
                        android:textColor="@color/main_color_black"
                        android:textSize="18dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padd_10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/nama"
                        android:textColor="@color/second_color_black"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tvNamaEmp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Muhamad Dios Pratama"
                        android:textColor="@color/main_color_black"
                        android:textSize="24dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padd_10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/divisi"
                        android:textColor="@color/second_color_black"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tvDivisiEmp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Mobile Apps Developer"
                        android:textColor="@color/main_color_black"
                        android:textSize="24dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padd_10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/jabatan"
                        android:textColor="@color/second_color_black"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tvJabatanEmp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Staff"
                        android:textColor="@color/main_color_black"
                        android:textSize="24dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padd_10"
                    android:gravity="left"
                    android:text="@string/indikasi_penyakit"
                    android:textColor="@color/second_color_black"
                    android:textSize="12dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tx_input_indikasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/red_btn_bg_pressed_color"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <EditText
                        android:id="@+id/edit_IndikasiPenyakit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_input_rounded"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textColor="@color/main_color_black" />


                </android.support.design.widget.TextInputLayout>


                <!--<TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padd_10"
                    android:gravity="left"
                    android:text="@string/tgl_sakit"
                    android:textColor="@color/second_color_black"
                    android:textSize="12dp" />

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:id="@+id/tx_input_tgl_sakit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/abu_abu"
                    app:errorTextAppearance="@style/error_appearance">

                    <EditText
                        android:id="@+id/edit_tgl_sakit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_input_rounded"
                        android:inputType="text"
                        android:padding="10dp"
                        android:drawableEnd="@drawable/ic_date"
                        android:drawableTint="@color/main_blue_color"
                        android:textColor="@color/main_color_black" />


                </android.support.design.widget.TextInputLayout>-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padd_10"
                    android:gravity="left"
                    android:text="@string/tgl_sakit"
                    android:textColor="@color/second_color_black"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <android.support.design.widget.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:id="@+id/tx_input_tgl_sakit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/abu_abu"
                        android:layout_weight="1"
                        app:errorTextAppearance="@style/error_appearance">

                        <EditText
                            android:id="@+id/edit_tgl_sakit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_input_rounded"
                            android:padding="10dp"
                            android:enabled="false"
                            android:textColor="@color/main_color_black"
                            android:focusable="true"
                            />


                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:id="@+id/ivTgl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_date_blue"
                        android:layout_weight="7"
                        android:layout_gravity="center"
                        />

                </LinearLayout>

                <CheckBox
                    android:id="@+id/cbSkd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Punya Surat Keterangan Dokter ?"
                    android:textColor="@color/black"
                    android:buttonTint="@color/main_blue_color"
                    />

                <LinearLayout
                    android:id="@+id/llUploadSkd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="left"
                        android:text="@string/lampiran_foto_surat_keterangan_dokter"
                        android:textColor="@color/second_color_black"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:background="@drawable/bg_tag"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/image_surat_izin_sakit"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_camera" />

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tx_image_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padd_10"
                            android:textAlignment="center"
                            android:textColor="@color/main_color_black"
                            android:textSize="14dp" />


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="left"
                    android:text="@string/catatan"
                    android:textColor="@color/second_color_black"
                    android:textSize="12dp" />


                <EditText
                    android:maxLength="200"
                    android:id="@+id/edit_catatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_tag"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:lines="6"
                    android:overScrollMode="always"
                    android:scrollbars="vertical"
                    android:scrollHorizontally="false"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/main_color_black" />


                <Button
                    android:id="@+id/btn_ajukan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padd_10"
                    android:layout_weight="1"
                    android:background="@drawable/bg_round"
                    android:backgroundTint="@color/greennew"
                    android:text="@string/ajukan"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp" />

            </LinearLayout>

        </android.support.design.widget.CoordinatorLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/llViewCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#ffffff"
        >

        <com.squareup.timessquare.CalendarPickerView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            />

        <LinearLayout
            android:id="@+id/llViewGetDates"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp"
            >

            <Button
                android:id="@+id/btnCancelDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Batal"
                android:layout_weight="1"
                android:layout_gravity="center"
                />

            <Button
                android:id="@+id/btnGetDates"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Pilih Tanggal"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:backgroundTint="@color/main_blue_color"
                />

        </LinearLayout>

    </LinearLayout>





</android.support.design.widget.CoordinatorLayout>